<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emotion - Add new mood</title>
    <link rel="icon" href="../img/emotion.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="../styles/mystyles.css">
</head>

<body>
    <%- include('partials/navbar') %>
        <script> document.getElementById("nav-view").classList.add("active")</script>
        <div class=" container mt-3 mb-5 pb-3 text-center" style="min-height: 100lvh;">

            <% if(typeof errMessage !="undefined" && errMessage) { %>
                <div class="mt-5 mb-3">
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>
                            <%= errMessage %>
                        </strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>

                <% } %>

                    <div class="row  ">

                        <% if(data) { %>
                            <% for(let mood of data) { %>

                                <div class="col-md-auto  mb-3 ">

                                    <div class="col card h-100" style="min-width: 300px;">
                                        <div class="card-header d-flex justify-content-between ">
                                            <div><i class="bi bi-calendar-event mx-1"></i>
                                                <%=mood.mood_timestamp.toString().substring(0,21) %>
                                            </div>
                                            <div class="dropdown d-flex align-items-end">

                                                <i class="bi bi-three-dots-vertical" type="button"
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                </i>
                                                <ul class="dropdown-menu" style="min-width: 3rem;">
                                                    
                                                    <li><button class="dropdown-item d-flex justify-content-between"
                                                            type="button" onclick="editMood(<%=mood.mood_id%>)">Edit<i
                                                                class="bi bi-pencil-square mx-1"></i></button>
                                                    </li>
                                                    
                                                    <form action="/mood/delete/<%=mood.mood_id%>" method="POST">
                                                        <li><button class="dropdown-item d-flex justify-content-between"
                                                                type="submit">Remove<i
                                                                    class="bi bi-trash3 mx-1"></i></button>
                                                        </li>
                                                    </form>

                                                </ul>
                                            </div>
                                        </div>

                                        <div class="card-body">
                                            <ul class="list-group mb-1 "></ul>
                                            <% for ( let emotion of mood.emotion) { %>

                                                <li class="list-group-item py-0 " style="border-style:none;">
                                                    <%= emotion.emotion_name.substring(0,1).toUpperCase()+emotion.emotion_name.substring(1)
                                                        %>
                                                        <div
                                                            class="row d-flex align-items-center justify-content-center ">
                                                            <div
                                                                class="col-1 m-0 p-0 fw-medium  d-flex justify-content-end justify-text-center">
                                                                <i class="bi <%=emotion.emotion_icon%> "></i>
                                                            </div>

                                                            <div class="col-10 ">
                                                                <div class="progress " role="progressbar"
                                                                    aria-label="Example with label" aria-valuenow="25"
                                                                    aria-valuemin="0" aria-valuemax="100"
                                                                    style="--bs-progress-bar-bg: <%=emotion.emotion_colour%>;">

                                                                    <div class="progress-bar"
                                                                        style="width:<%= emotion.emotion_level*10%>%">

                                                                    </div>
                                                                </div>
                                                            </div>
                                                </li>

                                                <% } %>

                                                    </ul>
                                                    <div class="container d-flex justify-content-center">
                                                        <div class=" mt-2 p-0 ">
                                                            <ul class="list-group list-group-horizontal mb-3 p-0 row row-cols-auto justify-content-evenly"
                                                                id="context-list">
                                                                <% if(mood.context) for ( let context of mood.context) {
                                                                    %>
                                                                    <div class="col">
                                                                        <h6 class="fw-lighter m-0"
                                                                            style="font-size: 0.75rem;">
                                                                            <%=context.context_type_name %>
                                                                        </h6>

                                                                        <li class=" list-group-item border border-3 rounded justify-content-between   "
                                                                            id="<%=context.context_type_name %>">
                                                                            <i
                                                                                class="bi <%=context.context_icon%> fw-medium fs-4"></i>
                                                                        </li>
                                                                    </div>

                                                                    <%}%>

                                                                    
                                                            </ul>
                                                            <form action="/mood/update/<%=mood.mood_id%>" method="POST">
                                                                <input type="text" class="form-control text-center visually-hidden d-inline"
                                                                    id="mood-context-input-<%=mood.mood_id%>"
                                                                    value="<%=mood.context_comment %>" name="contextComment">
                                                                    
                                                                </input>
                                                                <% if(mood.context_comment) { %>
                                                                <div class="form-control" id="mood-context-<%=mood.mood_id%>">
                                                                    <%=mood.context_comment %>
                                                                </div>
                                                                <% } %>
                                                                <button type="submit"
                                                                    class="btn btn-primary mt-2 visually-hidden"
                                                                    id="save-btn-<%=mood.mood_id%>">Save Changes</button>
                                                            </form>


                                                        </div>
                                                    </div>
                                        </div>


                                        <div class="card-footer">
                                            <% const currentDate=Date.now(); const moodDate=new Date
                                                (mood.context_timestamp); let lastUpdate=currentDate - moodDate ; %>

                                                <small class="text-body-secondary">Last updated <% var
                                                        diffDays=Math.floor(lastUpdate / 86400000); var
                                                        diffHrs=Math.floor((lastUpdate % 86400000) / 3600000); var
                                                        diffMins=Math.floor(((lastUpdate % 86400000) % 3600000) /
                                                        60000); %>

                                                        <% if(diffDays>1) { %> <%= diffDays + " days," %>
                                                                <% } else if(diffDays>0) {%><%= diffDays + " day," %>
                                                                        <% } %>
                                                                            <% if(diffHrs>1) { %> <%= diffHrs
                                                                                    + " hours " %>
                                                                                    <% } else if(diffHrs>0) {%><%=
                                                                                            diffHrs + " hour," %>
                                                                                            <% }if(diffMins>1 &&
                                                                                                !diffDays>0) { %>
                                                                                                <%=diffMins + " minutes"
                                                                                                    %>
                                                                                                    <% }else
                                                                                                        if(diffMins>0 &&
                                                                                                        !diffDays>0) {%>
                                                                                                        <%= diffMins
                                                                                                            + " minute"
                                                                                                            %>
                                                                                                            <% }if(
                                                                                                                (lastUpdate
                                                                                                                / 1000)
                                                                                                                <60 )
                                                                                                                {%> just
                                                                                                                now <%
                                                                                                                    }else
                                                                                                                    { %>
                                                                                                                    ago
                                                                                                                    <%}%>
                                                </small>
                                        </div>

                                    </div>

                                </div>
                                <% } %>
                                    <% } else { %>
                                        <h1 class="text-center">No moods to show... <a href="/mood/add"> Add mood?</a>
                                        </h1>
                                        <% } %>
                    </div>
        </div>




        <%- include('partials/footer') %>

            <script>
                function editMood(id) {
                    if(document.getElementById('mood-context-' + id))document.getElementById('mood-context-' + id).classList.toggle('visually-hidden');
                    document.getElementById('mood-context-input-' + id).classList.toggle('visually-hidden');
                    document.getElementById('save-btn-' + id).classList.toggle('visually-hidden');
                }
            </script>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                crossorigin="anonymous"></script>

</body>

</html>